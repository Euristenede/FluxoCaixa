CREATE TABLE USUARIO(CD_USUARIO SERIAL PRIMARY KEY NOT NULL,
					 DS_USUARIO VARCHAR(50) NOT NULL,
					 DS_SENHA   VARCHAR(50) NOT NULL);
					 

CREATE TABLE EMPRESA (
  CD_EMPRESA SERIAL NOT NULL PRIMARY KEY,
  NM_EMPRESA VARCHAR(200) NOT NULL);

  
CREATE TABLE BANCO (
  CD_BANCO SERIAL NOT NULL PRIMARY KEY,
  DS_BANCO VARCHAR(100) NOT NULL,
  NR_AGENCIA INT NOT NULL,
  NR_CONTA INT NOT NULL,
  VL_SALDO float)
  
CREATE TABLE CENTROCUSTO (
  CD_CCUSTO SERIAL NOT NULL PRIMARY KEY,
  DS_CCUSTO VARCHAR(200) NOT NULL,
  DT_RECORD DATE default current_date);
  
CREATE TABLE FUNCIONARIO (
  CD_FUNCIONARIO SERIAL NOT NULL PRIMARY KEY,
  NM_FUNCIONARIO VARCHAR(200) NOT NULL,
  NR_CPF NUMERIC NOT NULL,
  NR_RG NUMERIC NOT NULL,
  DT_NASCIMENTO DATE NOT NULL,
  VL_SALARIO FLOAT NOT NULL,
  DT_ADMISSAO DATE NOT NULL,
  NR_TELEFONE NUMERIC NOT NULL,
  DS_CARGO VARCHAR(200) NOT NULL);
  
CREATE TABLE CARRO (
  CD_CARRO SERIAL NOT NULL PRIMARY KEY,
  NR_PLACA VARCHAR(7) NOT NULL,
  DS_MARCA VARCHAR(100) NOT NULL,
  DS_MODELO VARCHAR(100) NOT NULL,
  NR_ANO INT NOT NULL,
  TP_COMBUSTIVEL INT NOT NULL,
  NR_DOCUMENTO NUMERIC NOT NULL,
  DT_VECDOCUMENTO DATE NOT NULL);
  
CREATE TABLE DESPESACCUSTO (
  CD_DESPCCUSTO SERIAL NOT NULL PRIMARY KEY,
  DS_DESPCCUSTO VARCHAR(200) NOT NULL,
  DT_RECORD DATE default current_date,
  FK_CCUSTO INT NOT NULL,
  FK_FUNCIONARIO INT NULL,
  FK_CARRO INT NULL);
  
CREATE TABLE RECEITA (
  CD_RECEITA SERIAL NOT NULL PRIMARY KEY,
  DS_RECEITA VARCHAR(200) NOT NULL,
  VL_RECEITA FLOAT NOT NULL,
  DT_RECEITA DATE NOT NULL,
  FK_EMPRESA INT NOT NULL,
  FK_BANCO INT NOT NULL);
  
CREATE TABLE DESPESA (
  CD_DESPESA SERIAL NOT NULL PRIMARY KEY,
  DT_DESPESA DATE NOT NULL,
  VL_DESPESA FLOAT NOT NULL,
  ST_DESPESA INT NOT NULL,
  FK_CCUSTO INT NOT NULL,
  FK_DESPCCUSTO INT NOT NULL,
  FK_BANCO INT);